<section class="cancalled-games">
  <div class="container">
    <h2 class="title">Cancalled games</h2>
    
    <div class="cancalled-games__posts">
      {{#get "posts" filter="tags:active-game" }}
      {{#foreach posts }}
        <div class="cancalled-games__post">
          {{> "post-card" additionalClass="post-card_grey post-card_small"}}
        </div>
      {{/foreach}}
      {{/get}}
    </div>
  </div>
</section>