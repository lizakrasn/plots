<section class="ended-games">
  <div class="container">
    <h2 class="title">Ended games</h2>
    
    <div class="ended-games__posts">
      {{#get "posts" filter="tags:active-game" }}
      {{#foreach posts }}
        <div class="ended-games__post">
          {{> "post-card" additionalClass="post-card_grey post-card_small"}}
        </div>
      {{/foreach}}
      {{/get}}
    </div>
  </div>
</section>