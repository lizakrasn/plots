<article class="article-card {{additionalClass}} {{post_class}} {{#is "home"}}{{#if feature_image}}{{#has index="0"}}{{/has}}{{/if}}{{/is}}">

    {{#if feature_image}}
        <img class="article-card__image"
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 400px, 800px"
            src="{{img_url feature_image size="m"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
        />
    {{else}}
        <div class="article-card__image css-hack-dafault-image"></div>
    {{/if}}

    <div class="article-card__content">
        <header class="article-card__header">
            {{#if title}}
                <h2 class="article-card__title">{{title}}</h2>
            {{/if}}

            {{#if published_at}}
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>
            {{/if}}

            {{#primary_author}}
                <div class="author">
                    <a href="{{url}}">by {{name}}</a>
                    <span class="bio">{{bio}}</span>
                </div>
            {{/primary_author}}
        </header>

        <div class="article-card__body">
            {{#if excerpt}}
                <p class="article-card__exerpt">{{excerpt}}</p>
            {{/if}}

            <div class="article-card__info">
                <div class="article-card__tags">Tagget with
                    {{#foreach tags}}
                        <p class="article-card__tag">{{name}}</p>
                    {{/foreach}}
                </div>
                <a class="article-card__content-link button" href="{{url}}">
                    <span class="button__text">Read more</span>
                    <span class="button__arrow">âž¡</span>
                </a>
            </div>
        </div>
    </div>
</article>